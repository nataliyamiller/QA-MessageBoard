<div>
{{#if updateQuestionForm}}
  <h4>Update {{question.content}} question</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="content">Question</label>
          {{input value=content id="content" placeholder=question.content}}
        </div>

        <div class="form-group">
          <label for="questionAuthor">Author's name</label>
          {{input value=questionAuthor id="questionAuthor" placeholder=question.questionAuthor}}
        </div>

        <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <button class="btn-success"{{action 'updateQuestion' question}}>Save</button>
      </form>
    </div>
{{else}}
  <button class="btn-warning btn-block" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
</div>
