{{#if addNewAnswer}}
    <div>
      <form>
        <div class="form-group">
          <label for="answerContent">Input your answer</label>
          {{input value=answerContent id="answerContent" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="answerAuthor">You name</label>
          {{input value=answerAuthor id="answerAuthor" class="form-control"}}
        </div>

      <button class="btn-primary" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn-success" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
