{{#if addNewQuestion}}
  <h3>New Question</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="content">Question</label>
          {{input value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="questionAuthor">Author's name</label>
          {{input value=questionAuthor id="questionAuthor"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description"}}
        </div>

        <button class="btn-success" {{action 'saveQuestion'}}>Save question</button>
      </form>
    </div>
{{else}}
  <button class="btn-primary" {{action 'questionFormShow'}}>Add new question</button>
{{/if}}
